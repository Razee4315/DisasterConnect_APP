{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "disasterconnect_app",
  "version": "0.1.13",
  "identifier": "com.saqla.disasterconnect-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DisasterConnect",
        "width": 800,
        "height": 600,
        "maximized": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [],
      "pubkey": ""
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "disasterconnect"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
